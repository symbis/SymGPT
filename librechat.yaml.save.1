# LibreChat Configuration
version: 1.2.8
cache: true
fileStrategy: "azure_blob"

interface:
  endpointsMenu: false
  modelSelect: true
  parameters: false
  sidePanel: true
  presets: false
  prompts: true
  bookmarks: false
  multiConvo: false
  customWelcome: "Waar wil je vandaag samen aan werken?"
  agents: true
  runCode: false

endpoints:
  azureOpenAI:
    titleConvo: true
    titleMethod: "completion"
    titleModel: "gpt-4.1-title"
    groups:
      - group: "symbis-azure"
        apiKey: "${AZURE_OPENAI_API_KEY}"
        instanceName: "${AZURE_OPENAI_INSTANCE}"
        version: "preview"
        models:
          gpt-4.1:
            deploymentName: "${AZURE_GPT41_DEPLOYMENT}"
          gpt-5-mini:
            deploymentName: "${AZURE_GPT5_DEPLOYMENT}"

      - group: "symbis-azure-titles"
        apiKey: "${AZURE_OPENAI_API_KEY}"
        instanceName: "${AZURE_OPENAI_INSTANCE}"
        version: "2024-10-21"
        models:
          gpt-4.1-title:
            deploymentName: "${AZURE_GPT41_DEPLOYMENT}"

  # Custom endpoint voor websearch
  custom:
    - name: "websearch-api"
      apiKey: "${WEBSEARCH_API_KEY}"
      baseURL: "https://api.perplexity.ai/"
      models:
        default: ["sonar-pro", "sonar-deep-research"]
        fetch: false
      summarize: false
      forcePrompt: false
      dropParams: ["stop", "frequency_penalty"]
      modelDisplayLabel: "Web Search"

  agents:
    recursionLimit: 25
    maxRecursionLimit: 50
    disableBuilder: false
    allowedProviders:
      - azureOpenAI
    capabilities:
      - "file_search"
      - "actions"
      - "artifacts"

modelSpecs:
  enforce: true
  prioritize: false
  addedEndpoints:
    - agents
